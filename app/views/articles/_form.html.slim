= simple_form_for article do |f|
  - if article.errors.any?
    #error_explanation
      h2
        = "#{pluralize(article.errors.count, "error")} prohibited this article from being saved:"

      ul
        - article.errors.each do |error|
          li
            = error.full_message

  .actions
    .field
      = f.input :title
    .field
      = f.input :content, as: :text
    .field
      = f.input :image, as: :image
    .submit
      = f.submit
